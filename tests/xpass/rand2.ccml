# expected value verified in C

var seed = 145

function rng()
  seed = seed * 1103515245 + 12345
  return seed
end

function main()

  var size = 16

  var data[16]
  var i = 0

  # fill array with random data
  while (i < size)
    data[i] = rng() % 16
    i += 1
  end

  # check in the sorted array
  i = 0
  var out = ""
  while (i < size)
    out += data[i] + " "
    i += 1
  end

  puts(out)
end
